<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ellipse_1" />

    <TextView
        android:id="@+id/tvwb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerInParent="true"
        android:text="Welcomce back"
        android:textSize="39dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tva"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/tvwb"
        android:text="Login to your account"
        android:layout_centerInParent="true"
        android:textSize="19dp"
        />
    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tva"
        android:textSize="30dp"
        android:hint="Enter email or phone"

        />
    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@id/et1"
        android:hint="Password"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et1"
        android:layout_alignRight="@id/et2"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/ant_design_eye_invisible_filled" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et2"
        app:srcCompat="@drawable/ri_checkbox_circle_line" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et2"
        android:hint="Remember me"
        android:layout_toRightOf="@id/imageView4" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/et2"
        android:layout_below="@id/et2"
        android:text="Forgot Password?"
        android:textColor="#E3CF20"
        android:textStyle="bold"

    <Button
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_below="@id/imageView4"
        android:layout_centerInParent="true"
        android:text="LOG IN"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/yellow"

        />




</RelativeLayout>
